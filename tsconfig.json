{
	"compilerOptions": {
		"module": "NodeNext",
		"lib": ["es2021", "dom", "dom.iterable"],
		"target": "es2017",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"sourceRoot": "./src",
		"types": ["node"],
		"declaration": true,
		"removeComments": false,
		"inlineSources": false,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "test", "dist"],
	"ts-node": {
		"esm": true
	}
}
